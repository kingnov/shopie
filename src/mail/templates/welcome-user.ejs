    <!-- Call to Action -->
    <div style="text-align: center; margin-bottom: 24px;">
        <a href="http://localhost:3000" style="display: inline-block; background-color: #2563eb; color: #ffffff; padding: 12px 32px; border-radius: 8px; text-decoration: none; font-weight: 500; font-size: 16px;">
